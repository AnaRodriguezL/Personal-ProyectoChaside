	aria-hidden="false">
	<div class="modal-dialog modal-pass" role="document">
		<div class="modal-content">

			{{!-- MODAL HEADER --}}
			<div class="modal-header">
				<h4 class="modal-title">¿Olvidó la contraseña?</h4>
				<button type="button" class="close btnCerrarModalOlvidoPass" data-dismiss="modal">&times;</button>
			</div>

			{{!-- MODAL BODY --}}
			<div class="modal-body">
				<form id="formOlvidoPass">

					{{!-- INPUT CORREO ELECTRÓNICO --}}
					<div class="col-lg-12">
						<div id="divInputEmail" class="form-group">
							<label for="emailRecordarPass">Correo electrónico</label>
							<input id="emailRecordarPass" type="text" class="form-control-input"
								placeholder="nombre@correoelectronico.com">
						</div>
					</div>

					{{!-- INPUT CONTRASEÑA --}}
					<div class="col-lg-12">
						<div id="divInputPass" class="form-group">
							<label for="documetnoRecordarPass">Número de documento</label>
