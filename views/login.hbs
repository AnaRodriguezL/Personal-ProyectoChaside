						</div>
					</div>
				</form>
			</div>

			{{!-- MODAL FOOTER --}}
			<div class="modal-footer">
				<button id="RecordarPass" type="submit" class="btn-enviar">Enviar nueva contraseña</button>
			</div>
		</div>
	</div>
</div>

{{!----------------------------------------- MODAL CAMBIAR CONTRASEÑA ----------------------------------------}}
<div class="modal modal-pass fade" id="modalCambiarPass" role="dialog" aria-labelledby="myModalLabel"
	aria-hidden="false">
	<div class="modal-dialog" role="document" style="width: 400px">
		<div class="modal-content">

			{{!-- MODAL HEADER --}}
			<div class="modal-header">
				<h4 class="modal-title">Cambiar contraseña</h4>
				<button type="button" class="close btnCerrarModalCambiarPass" data-dismiss="modal">&times;</button>
			</div>

			{{!-- MODAL BODY --}}
			<div class="modal-body">
				<form id="formCambiarPass">

					{{!-- INPUT CORREO ELECTRÓNICO --}}
